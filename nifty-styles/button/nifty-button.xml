<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button background panel -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#panel">
    <attributes backgroundImage="button/button.png" imageMode="sprite-resize:100,23,1,3,94,3,3,3,94,3,17,3,94,3,3" paddingLeft="7px" paddingRight="7px" width="100px" height="23px" childLayout="center" visibleToMouse="true" />
    <effect>
      <onHover name="border" color="#0c28bb" post="true" />
      <onFocus name="imageOverlay" filename="button/button.png" imageMode="sprite-resize:100,23,0,3,94,3,3,3,94,3,17,3,94,3,3" post="true" />
      <onEnabled name="imageOverlay" filename="button/button.png" imageMode="sprite-resize:100,23,1,3,94,3,3,3,94,3,17,3,94,3,3" post="true" />
      <onDisabled name="imageOverlay" filename="button/button.png" imageMode="sprite-resize:100,23,2,3,94,3,3,3,94,3,17,3,94,3,3" post="true" />

    </effect>
  </style>

  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button text -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#text" base="button-font">
    <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false"/>
    <effect>
      <!--<onEnabled name="textColorAnimated" startColor="#8886" endColor="#eeef" post="false" length="150" />-->
      <onEnabled name="textColorAnimated" startColor="#888888" endColor="#ffffff" post="false" length="150" />
      <onDisabled name="textColorAnimated" startColor="#ffffff" endColor="#888888" post="false" length="150" />
    </effect>
  </style>
</nifty-styles>
