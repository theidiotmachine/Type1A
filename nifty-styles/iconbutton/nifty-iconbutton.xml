<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button background panel -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-iconbutton#panel">
        <attributes backgroundImage="button/button.png" imageMode="sprite-resize:100,23,1,3,94,3,3,3,94,3,17,3,94,3,3" paddingLeft="7px" paddingRight="7px" width="100px" height="23px" childLayout="center" visibleToMouse="true" />
        <effect>
            <onHover name="border" color="#0c28bb" post="true" />
            <onFocus name="imageOverlay" filename="button/button.png" imageMode="sprite-resize:100,23,0,3,94,3,3,3,94,3,17,3,94,3,3" post="true" />
            <onEnabled name="renderQuad" startColor="#0c28bb" endColor="#2220" post="true" length="150" />
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" />
        </effect>
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button image -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-iconbutton#image">
    </style>
</nifty-styles>
