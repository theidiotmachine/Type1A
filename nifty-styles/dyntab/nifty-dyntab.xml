<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button background panel -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-dyntab#panel">
        <attributes backgroundImage="dyntab/dyntabs.png" imageMode="sprite-resize:128,48,1,3,101,24,3,3,101,24,42,3,101,24,3" paddingLeft="11px" paddingRight="22px" width="100px" height="23px" childLayout="center" visibleToMouse="true" />
        <effect>
            <!-- onFocus name="imageOverlay" filename="dyntab/dyntabs.png" imageMode="sprite-resize:128,48,0,3,101,24,3,3,101,24,42,3,101,24,3" post="true" />
            <onEnabled name="renderQuad" startColor="#0c28bb" endColosr="#2220" post="true" length="150" />
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" /> -->
            <onCustom customKey="show" name="imageOverlay" filename="dyntab/dyntabs.png" imageMode="sprite-resize:128,48,0,3,101,24,3,3,101,24,42,3,101,24,3" post="true" neverStopRendering="true" />
        </effect>
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button image -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-dyntab#image">
    </style>

    <style id="nifty-dyntab#title" base="button-font">
        <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false"/>
        <effect>
            <!--<onEnabled name="textColorAnimated" startColor="#8886" endColor="#eeef" post="false" length="150" />-->
            <onEnabled name="textColorAnimated" startColor="#ff00ff" endColor="#000000" post="false" length="150" />
            <onDisabled name="textColorAnimated" startColor="#eeef" endColor="#8886" post="false" length="150" />
        </effect>
    </style>
</nifty-styles>